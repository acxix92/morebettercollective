{
  "name": "dojo",
  "version": "0.0.0",
  "description": "A learning project for the HW interactive design team",
  "author": "Justin Chick",
  "style": "css/tachyons.min.css",
  "main": "css/tachyons.css",
  "files": [
    "css",
    "src"
  ],
  "repository": "hw-interactive/dojo",
  "keywords": [
    "css",
    "oocss",
    "postcss",
    "functional css",
    "design",
    "responsive",
    "performance"
  ],
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.9.6",
    "copy-files": "^0.1.0",
    "immutable-css-cli": "^1.1.1",
    "normalize.css": "^5.0.0",
    "parallelshell": "^2.0.0",
    "tachyons-cli": "^1.0.9",
    "tachyons-modules": "^1.1.8",
    "watch": "^1.0.1"
  },
  "contributors": [
    {
      "name": "Justin Chick",
      "email": "jchick@hanleywood.com"
    },
    {
      "name": "Alex Cortex",
      "email": "acortez@hanleywood.com"
    }
  ],
  "scripts": {
    "start": "parallelshell 'npm run server' 'npm run build:watch'",
    "mutations": "immutable-css src/tachyons.css --strict",
    "build": "npm run build:css && npm run build:minify",
    "build:css": "tachyons src/tachyons.css > css/tachyons.css",
    "build:minify": "tachyons src/tachyons.css -m > css/tachyons.min.css",
    "build:watch": "watch 'npm run build' ./src/",
    "server": "browser-sync start --server --files 'css/*.css, *.html'"
  }
}
